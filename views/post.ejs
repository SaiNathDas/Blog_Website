<%- include("partials/header1"); -%>

<!-- Page Content -->
<!-- Banner Starts Here -->
<div class="heading-page header-text">
  <section class="page-heading">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="text-content">
            <h4>Post Details</h4>
            <h2>Single blog post</h2>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>

<section class="blog-posts grid-system grid-system1">
  <div class="container">
    <div class="row">
      <div class="col-lg-8">
        <div class="all-blog-posts">
          <div class="row">
            <div class="col-lg-12">
              <div class="sidebar-item submit-comment">
                <div class="sidebar-heading">
                  <h2>Your Post</h2>
                </div>
                <div class="content">
                  <form id="comment" action="/post" method="post" entype="multipart/form-data">
                    <div class="row">
                      <div class="col-md-6 col-sm-12">
                        <fieldset>
                          <input type="text" id="name" placeholder="Your name" name="postName" autocomplete="off" required>
                        </fieldset>
                      </div>
                      <div class="col-md-6 col-sm-12">
                        <fieldset>
                          <input name="postEmail" type="text" id="email" placeholder="Your email" autocomplete="off" required="">
                        </fieldset>
                      </div>
                      <div class="col-md-12 col-sm-12">
                        <fieldset>
                          <input type="text" id="subject" placeholder="Title" name="postTitle" required>
                        </fieldset>
                      </div>
                      <div class="col-lg-12">
                        <fieldset>
                          <textarea rows="6" type="text" id="message" placeholder="Type your content" name="postBody" required></textarea>
                        </fieldset>
                      </div>
                      <div class="col-md-12 col-sm-12">
                        <fieldset>
                          <input type="text" id="tags" placeholder="Enter your Tags" name="postTags" >
                        </fieldset>
                      </div>

                      <div class="col-lg-12">
                        <fieldset>
                          <button type="submit" id="form-submit" class="main-button">Submit</button>
                        </fieldset>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include("partials/footer"); -%>
